@model IEnumerable<StackoverFlow.Web.Models.QuestionListModel>

@{
    ViewBag.Title = "Index";
}

<h2>Question</h2>

<p>
    @Html.ActionLink("Create New", "Question")
</p>
<table class="table">
    <tr>
        <th>
            
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Votes)
        </th>
